{{#if placeholder}}
  <option value="" selected disabled>
    {{placeholder}}
  </option>
{{/if}}

{{#if hasBlock}}
  {{yield}}
{{else}}
  {{#if isDeepOptions}}
    {{#each options as | option |}}
      <option value={{get option valueKey}} selected={{is-equal (get option valueKey) value}}>
        {{get option displayKey}}
      </option>
    {{/each}}
  {{else}}
    {{#each options as | option |}}
      <option value={{option}} selected={{is-equal option value}}>
        {{option}}
      </option>
    {{/each}}
  {{/if}}
{{/if}}
